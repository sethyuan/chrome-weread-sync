{
  "manifest_version": 3,
  "name": "微信读书LS同步助手",
  "version": "0.3.0",
  "description": "配合 Logseq 插件 WeRead Sync 使用，同步微信读书数据。",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    }
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://weread.qq.com/*",
        "*://i.weread.qq.com/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://weread.qq.com/",
    "*://i.weread.qq.com/",
    "http://localhost:*/",
    "http://127.0.0.1:*/"
  ]
}
